.content{
  text-align: left;
  padding: 0 50rpx;
  font-family: "Microsoft YaHei",PingFangSC-Regular,HelveticaNeue-Light,"Helvetica Neue Light",sans-serif;
  line-height: 2;
  overflow: hidden;
  font-size: 40rpx;
}
button{color: inherit}
.btn_read{
    margin: 20rpx auto;
    background-color: rgba(225, 225, 225, 0.3);
    font-size: 24rpx;
    justify-content: center;
    align-items: center;
    width: 90%;
    cursor: pointer;
}
.backgroundGroup{
  width: 100%;
  height: 200rpx;
  background: #000;
  position: fixed;
  bottom:0;
  border-top: 1rpx solid #ddd
}
scroll-view{
  height: 100%;
  text-align: center;
}
.item_contact{
  width: 100%;
  display: flex;
  align-items: flex-start;
  flex-direction: column;
}

.body{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-color: #E9FAFF;

}
.body_text{
  padding-top: 18rpx;
  text-indent: 72rpx;
  align-items: center;
  margin-left: 24rpx;
  margin-right: 24rpx;
  color: #333;
  font-size: 36rpx;
  font-family:方正启体简体,"Microsoft YaHei",微软雅黑,宋体;
  letter-spacing:0.2em;
  line-height:150%;
  width:90%;
  margin:auto;
  word-break: break-all;
}

.next_chapter{
  width: 90%;
  margin-top: 70rpx;
  color: #666;
  font-size: 36rpx;
  line-height: 60rpx;
  margin-bottom: 50rpx;
  text-align: center;
}
.bottom_view{
  border-top: 1rpx solid #ddd;
  color: #eeeeee;
  flex-direction: column;
  display: flex;
  height: 200rpx;
  width:100%;
  margin-top: -200rpx;
  background-color: rgba(0, 0, 0, 0.8);
  position: fixed;
  bottom:0;
}
.text_control{
  flex-direction: row;
  display: flex;
  padding: 18rpx 28rpx;
  align-items: center;
}
.pro_bar{
  flex:1;
  text-align: center;
}

.line{
  width: 100%;
  height: 1rpx;
  background-color: #666;
}

.img_control{
  justify-content:space-between;
  flex-direction: row;
  display: flex;
  padding: 28rpx;
}
.img_1{
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 40rpx;
}
.bgcolor{
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: red;
}
.content text{display: block;text-indent:50rpx;margin-bottom: 30rpx;}